{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@tanase-j-ww/ts-package": ["./packages/ts-package"],
      "@tanase-j-ww/react-package": ["./packages/react-package"],
      "@tanase-j-ww/mui-package": ["./packages/mui-package"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["node", "react"]
  },
  "exclude": ["**/.*/", "**/dist", "**/node_modules"]
}
