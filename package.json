{
  "name": "multi-package-test",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "author": "Juni Tanase",
  "scripts": {
    "build": "lerna run build",
    "build:ci": "lerna run build",
    "publish": "pnpm run set-tmp-env && pnpm publish --recursive",
    "set-tmp-env": "node -r dotenv/config -e \"require('dotenv').config()\"",
    "test": "run-p -c test:*",
    "lint": "eslint --ext .js,.ts src/ --fix",
    "lint:ci": "eslint --ext .js,.ts src/",
    "format": "prettier --write --ignore-unknown .",
    "format:ci": "prettier --check --ignore-unknown ."
  },
  "keywords": [],
  "description": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "lerna": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "pnpm": "9.4.0"
  }
}
